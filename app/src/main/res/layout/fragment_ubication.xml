<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ui.place.ubication.UbicationFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:id="@+id/layoutUbication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/colorBackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Datos del local"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="@color/colorBackground"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">
                        <ImageView
                            android:id="@+id/imageUbication"
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/ic_login"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/textImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="Cambiar imagen"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_change"
                        tools:ignore="HardcodedText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Nombre"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_sectors"
                        tools:ignore="HardcodedText" />
                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Ingresá el nombre"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/color_edit_text_selector"
                        android:textSize="18sp"
                        tools:text="Nombre del local"
                        tools:ignore="AutoFill,HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Dirección"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_address"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:text="Dirección del local" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Horarios"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_schedule"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textScheduleMon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:text="Horarios del lunes" />
                    <TextView
                        android:id="@+id/textScheduleTue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:text="Horarios del martes" />
                    <TextView
                        android:id="@+id/textScheduleWed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:text="Horarios del miércoles" />
                    <TextView
                        android:id="@+id/textScheduleThu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:text="Horarios del jueves" />
                    <TextView
                        android:id="@+id/textScheduleFri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:text="Horarios del viernes" />
                    <TextView
                        android:id="@+id/textScheduleSat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:text="Horarios del sábado" />
                    <TextView
                        android:id="@+id/textScheduleSun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:text="Horarios del domingo" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Menú"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_menu"
                        tools:ignore="HardcodedText" />
                    <EditText
                        android:id="@+id/editMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Ingresá un link al menú"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/color_edit_text_selector_place"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        tools:text="Menú del local"
                        tools:ignore="AutoFill,HardcodedText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Sitio Web"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_website"
                        tools:ignore="HardcodedText" />
                    <EditText
                        android:id="@+id/editWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Ingresá un sitio web"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/color_edit_text_selector_place"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        tools:text="Sitio del local"
                        tools:ignore="AutoFill,HardcodedText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Teléfono"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_phone"
                        tools:ignore="HardcodedText" />
                    <EditText
                        android:id="@+id/editPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Ingresá el teléfono"
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/color_edit_text_selector_place"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        tools:text="Teléfono del local"
                        tools:ignore="AutoFill,HardcodedText,TextFields"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Fácil accesibilidad"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_accessible"
                        tools:ignore="HardcodedText" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchAccessible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"/>
                        <TextView
                            android:id="@+id/textAccessible"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Deshabilitado"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textPdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:drawablePadding="10dp"
                        android:text="Ver instructivo en PDF"
                        android:textColor="@color/colorLink"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        app:drawableStartCompat="@drawable/ic_pdf"
                        tools:ignore="HardcodedText" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="35dp"
                        android:background="@color/colorAccent"
                        android:contentDescription="@string/app_name"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Ajustes de reservas"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Personas por reserva"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_people"
                        tools:ignore="HardcodedText" />
                    <SeekBar
                        android:id="@+id/barPeople"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                    <TextView
                        android:id="@+id/textPeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad de personas"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Tiempo de reserva"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_timer"
                        tools:ignore="HardcodedText" />
                    <SeekBar
                        android:id="@+id/barLimit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                    <TextView
                        android:id="@+id/textLimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiempo de reserva"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Tiempo de tolerancia"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_timer"
                        tools:ignore="HardcodedText" />
                    <SeekBar
                        android:id="@+id/barTolerance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                    <TextView
                        android:id="@+id/textTolerance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiempo de tolerancia"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                    <View
                        android:id="@+id/viewFocus"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardModify"
                        android:layout_width="170dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="30dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="MODIFICAR DATOS"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSave"
                        android:layout_width="170dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="30dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="GUARDAR DATOS"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_dialog_ok" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/colorPrimaryDark"/>
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/imageClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_close"/>
    </RelativeLayout>

</FrameLayout>