<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D6D6D6"
    tools:context=".ui.place.home.dialogs.HomeDialogFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorBackground"
                app:cardCornerRadius="7dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="Título"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImage"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="15dp"
                        tools:src="@drawable/ic_logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="A nombre de"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_user"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="Nombre del usuario"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Reserva para"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_people"
                        tools:ignore="HardcodedText" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imagePeopleSave"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_save"
                            android:visibility="gone"
                            tools:visibility="visible"/>
                        <EditText
                            android:id="@+id/editPeople"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="....."
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/color_edit_text_selector"
                            android:textSize="18sp"
                            tools:ignore="AutoFill,HardcodedText" />
                        <ImageView
                            android:id="@+id/imagePeopleEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_edit"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Mesa"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_table"
                        tools:ignore="HardcodedText" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageTableSave"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_save"
                            android:visibility="gone"
                            tools:visibility="visible"/>
                        <EditText
                            android:id="@+id/editTable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="....."
                            android:inputType="textPersonName"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:textColor="@color/color_edit_text_selector"
                            android:textSize="18sp"
                            tools:ignore="AutoFill,HardcodedText" />
                        <ImageView
                            android:id="@+id/imageTableEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_edit"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Comentarios"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_comment"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textComments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="Comentarios"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorBackground"
                app:cardCornerRadius="7dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="Datos del lugar"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:drawablePadding="5dp"
                        android:text="Día y horario"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_schedule"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="Día y horario del turno"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Lugar"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_address"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="Nombre del lugar"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Sector"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_sectors"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textSector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="Nombre del sector"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Tiempo de reserva"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_timer"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textLimit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="Tiempo de reserva"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="5dp"
                        android:text="Tiempo de tolerancia"
                        android:textSize="16sp"
                        app:drawableStartCompat="@drawable/ic_timer"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/textTolerance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:text="Tiempo de tolerancia"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRejection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/colorBackground"
                app:cardCornerRadius="7dp"
                app:cardElevation="4dp"
                tools:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Elegí el motivo de cancelación"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <RadioButton
                            android:id="@+id/radioButtonOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="El local se encuentra cerrado"
                            tools:ignore="HardcodedText" />
                        <RadioButton
                            android:id="@+id/radioButtonTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="El local está por cerrar"
                            tools:ignore="HardcodedText" />
                        <RadioButton
                            android:id="@+id/radioButtonThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="El local está lleno"
                            tools:ignore="HardcodedText" />
                        <RadioButton
                            android:id="@+id/radioButtonFour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="El sector está lleno"
                            tools:ignore="HardcodedText" />
                        <RadioButton
                            android:id="@+id/radioButtonFive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiempo de tolerancia excedido"
                            tools:ignore="HardcodedText" />
                        <RadioButton
                            android:id="@+id/radioButtonSix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Otros motivos"
                            tools:ignore="HardcodedText" />
                    </RadioGroup>
                    <EditText
                        android:id="@+id/editRejection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="1dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:hint="Detallá por qué lo rechazás..."
                        android:inputType="textPersonName"
                        android:maxLength="150"
                        android:maxLines="1"
                        android:textColor="@color/color_edit_text_selector"
                        android:textSize="18sp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        tools:ignore="AutoFill,HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_horizontal"
                android:paddingTop="30dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOne"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="30dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/textOne"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        tools:text="BOTÓN 1"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTwo"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_below="@id/cardOne"
                    android:layout_marginBottom="30dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/textTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        tools:text="BOTÓN 2"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardThree"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_below="@id/cardTwo"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/textThree"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        tools:text="BOTÓN 3"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_dialog_ok" />
    </RelativeLayout>

</FrameLayout>