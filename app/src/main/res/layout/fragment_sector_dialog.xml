<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D6D6D6"
    tools:context=".ui.place.sector.dialogs.SectorDialogFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layoutNew"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="Agregar sector"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:drawablePadding="5dp"
                    android:text="Nombre"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_user"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/editNameNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#00000000"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="Ingresá un nombre"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="@color/color_edit_text_selector"
                    android:textSize="18sp"
                    tools:ignore="AutoFill,HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:drawablePadding="5dp"
                    android:text="Capacidad máxima"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_people"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/editCapacityNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#00000000"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="Ingresá la capacidad"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textColor="@color/color_edit_text_selector"
                    android:textSize="18sp"
                    tools:ignore="AutoFill,HardcodedText" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="35dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardConfirmNew"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="30dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="CONFIRMAR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCloseNew"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/cardConfirmNew"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="CERRAR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Actualizar sector"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:drawablePadding="5dp"
                    android:text="Nombre"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_user"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/editNameUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#00000000"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="Ingrese un nombre"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:textColor="@color/color_edit_text_selector"
                    android:textSize="18sp"
                    tools:text="Sector"
                    tools:ignore="AutoFill,HardcodedText"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="5dp"
                    android:text="Capacidad máxima"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_people"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/editCapacityUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#00000000"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="Ingrese la capacidad"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textColor="@color/color_edit_text_selector"
                    android:textSize="18sp"
                    tools:text="0"
                    tools:ignore="AutoFill,HardcodedText"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageUpdate"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    tools:src="@drawable/ic_logo"/>
                <TextView
                    android:id="@+id/textImageUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="Cambiar imagen"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_change"
                    tools:ignore="HardcodedText"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="35dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardModifyUpdate"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="30dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="MODIFICAR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSaveUpdate"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="30dp"
                        android:visibility="invisible"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="GUARDAR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDeleteUpdate"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="30dp"
                        android:layout_below="@id/cardModifyUpdate"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="ELIMINAR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCloseUpdate"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="40dp"
                        android:layout_below="@id/cardDeleteUpdate"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="CERRAR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/viewEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/layoutDeleteUpdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/colorPrimaryDark"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/colorBackground"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Eliminar sector"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Si eliminás el sector, se cancelarán todas las reservas asociadas a ese sector..."
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="¿Querés eliminarlo de todas formas?"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        tools:ignore="HardcodedText" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardConfirmDelete"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="30dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="CONFIRMAR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCloseDelete"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="4dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="CERRAR"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            tools:ignore="HardcodedText" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutProgressNew"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Por favor, no salga de esta pantalla hasta que finalice la operación. Puede tardar hasta 1 minuto..."
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutProgressUpdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Por favor, no salga de esta pantalla hasta que finalice la operación. Puede tardar hasta 1 minuto..."
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDoneNew"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_dialog_ok" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDoneUpdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_dialog_ok" />
    </RelativeLayout>

</FrameLayout>